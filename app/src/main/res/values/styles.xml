<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="TravelTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:fontFamily">@font/rubik</item>

    </style>


    <style name="TravelTheme.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/round_corner</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_corner</item>
        <item name="hintTextColor">@color/colorAccent</item>

    </style>

    <style name="TravelTheme.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="TravelTheme.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>


</resources>
